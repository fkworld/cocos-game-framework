{
  // 搜索过滤
  "search.exclude": {
    // 不搜索以下路径下文件
    "**/node_modules": true
  },
  // 编辑器在保存时自动格式化
  "editor.formatOnSave": true,
  // 默认使用prettier进行格式化
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 默认解析json文件为jsonc模式，即可以带注释
  "files.associations": { "*.json": "jsonc" },
  // prettier设置
  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 100,
  "prettier.trailingComma": "all"
}
