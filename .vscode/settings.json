{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "build/": true,
    "temp/": true,
    "library/": true,
    "**/*.anim": true,
    "**/*.prefab": true,
    "**/*.json": true,
    "**/*.png": true,
    "**/*.ttf": true,
    "**/*.mp3": true,
    "**/*.fire": true,
    "types": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.meta": true,
    "library/": true,
    "local/": true,
    "temp/": true,
    "node_modules/": true
  },
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": false },
  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 100
}
