{
  "compilerOptions": {
    // 由于jest只能测试es5代码，因此这里需要为es5
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "files": ["example-project/creator.d.ts", "types/game.d.ts"],
  "include": ["src/**/*", "__test__/**/*"]
}
